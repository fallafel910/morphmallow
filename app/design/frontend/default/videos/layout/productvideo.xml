<?xml version="1.0"?>
<layout version="0.1.0">
	<catalog_product_view>
		<reference name="head">
			<action method="addItem"><type>skin_js</type><name>productvideo/js/jquery-1.9.1.js</name></action>
			<action method="addItem"><type>skin_js</type><name>productvideo/js/jquery-migrate-1.0.0.js</name></action>
			<action method="addJs"><script>jquery/jquery.min.js</script></action>
			<action method="addJs"><script>jquery/easypaginate.js</script></action>
			<action method="addJs"><script>jquery/easypaginate.min.js</script></action>
			<action method="addJs"><script>jquery/flowplayer.min</script></action>
		</reference>
		<reference name="product.info">
            <block type="productvideo/catalog_product_view_media" name="product.info.media" as="media" template="productvideo/catalog/product/view/media.phtml">
				<block type="productvideo/catalog_product_view_media_gallery_fancybox" name="gallery.fancybox" as="gallery-fancybox" template="productvideo/catalog/product/view/media/gallery/fancybox.phtml" />
				<block type="productvideo/catalog_product_view_media_gallery_lightbox" name="gallery.lightbox" as="gallery-lightbox" template="productvideo/catalog/product/view/media/gallery/lightbox.phtml" />
				<block type="productvideo/catalog_product_view_media_gallery_prettyphoto" name="gallery.prettyphoto" as="gallery-prettyphoto" template="productvideo/catalog/product/view/media/gallery/prettyphoto.phtml" />
				<block type="productvideo/catalog_product_view_media_gallery_colorbox" name="gallery.colorbox" as="gallery-colorbox" template="productvideo/catalog/product/view/media/gallery/colorbox.phtml" />
			</block>
		</reference>
	</catalog_product_view>
</layout>